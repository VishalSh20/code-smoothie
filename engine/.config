# Environment variables for Smoothie, and related settings - postgresql and redis

#---------- Smoothie port -----------
PORT=8088

#---------- default time limit in seconds -------------
DEFAULT_TIME_LIMIT=60

#---------- maximum time limit in seconds -------------
MAX_TIME_LIMIT=120

#---------- default memory limit in megabytes -------------
DEFAULT_MEMORY_LIMIT=256

#---------- maximum memory limit in megabytes -------------
MAX_MEMORY_LIMIT=1024

#---------- default cpu core limit -------------
DEFAULT_CPU_CORE_LIMIT=1

#---------- maximum cpu core limit -------------
MAX_CPU_CORE_LIMIT=4


#---------- Postgres url ----------- (Set this to your own postgres url - format: postgresql://username:password@host:port/database)
DATABASE_URL=postgresql://postgres:password@localhost:5432/smoothiedb

#---------- Redis port -----------
REDIS_PORT=6379

#---------- Redis host -----------
REDIS_HOST=localhost

#---------- Redis password ----------- (Don't leave it blank)
REDIS_PASSWORD=password

#---------- Max number of jobs in queue -----------
MAX_JOB_QUEUE_SIZE=100

